		"@types/eslint": "^8.56.7",
		"@typescript-eslint/eslint-plugin": "^5.62.0",
		"@typescript-eslint/parser": "^5.62.0",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^8.10.0",
		"eslint-plugin-svelte": "^2.36.0",
		"lodash": "^4.17.21",
		"markdown-to-txt": "^2.0.1",
		"mdsvex": "^0.11.0",
		"playwright": "^1.43.0",
		"pre-commit": "^1.2.2",
