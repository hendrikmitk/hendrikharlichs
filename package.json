		"svelte": "^4.2.12",
		"svelte-check": "^3.6.9",
		"svelte-sitemap": "^2.6.0",
		"tslib": "^2.6.2",
		"typescript": "^5.4.4",
		"vite": "^5.2.8",
		"wait-on": "^7.2.0"
	},
	"pre-commit": {
		"run": [
			"lint"
		],
		"silent": true
	},
	"type": "module",
	"dependencies": {
		"@vercel/analytics": "^1.1.1",
		"@vercel/speed-insights": "^1.0.3"
